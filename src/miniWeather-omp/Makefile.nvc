#===============================================================================
# User Options
#===============================================================================

# Compiler can be set below, or via environment variable

# Use nvc++ directly with MPI flags
CC        = nvc++
OPTIMIZE  = yes
DEBUG     = no
DEVICE    = gpu
SM        = cc70
LAUNCHER  =

#===============================================================================
# Program name & source code list
#===============================================================================

program = main

source = main.cpp

obj = $(source:.cpp=.o)

#===============================================================================
# Sets Flags
#===============================================================================

# Standard Flags
CFLAGS := $(EXTRA_CFLAGS) -std=c++14 -Wall \
	-DNX=400 \
       	-DNZ=200 \
	-DSIM_TIME=600 \
	-DDATA_SPEC=DATA_SPEC_THERMAL \
        -I../miniWeather-cuda/ \
	-I/usr/lib/aarch64-linux-gnu/openmpi/include \
	-I/usr/lib/aarch64-linux-gnu/openmpi/include/openmpi

# Linker Flags
LDFLAGS = -L/usr/lib/aarch64-linux-gnu/openmpi/lib -lmpi_cxx -lmpi

# Debug Flags
ifeq ($(DEBUG),yes)
  CFLAGS += -g -DDEBUG
  LDFLAGS  += -g
endif


# Optimization Flags
ifeq ($(OPTIMIZE),yes)
  CFLAGS += -O3
endif

ifeq ($(DEVICE),gpu)
  CFLAGS +=-Minfo -mp=gpu -gpu=$(SM)
else
  CFLAGS +=-cxx=nvc++
endif
#===============================================================================
# Targets to Build
#===============================================================================

$(program): $(obj)
	$(CC) $(CFLAGS) $(obj) -o $@ $(LDFLAGS)

%.o: %.cpp ../miniWeather-cuda/check_output.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(program) $(obj)

run: $(program)
	$(LAUNCHER) mpiexec -n 1 ./$(program)

